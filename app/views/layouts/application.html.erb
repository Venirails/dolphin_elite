<!DOCTYPE html>
<html>
  <head>
    <title>Dolphin Elite School</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'custom' %>
  </head>

  <body>
    <style>
      button.cta-button {
    color: #125fbf;
  }
    </style>
    <!-- scrollToTop --> 
    <div class="scrollToTop"><i class="icon-up-open-big"></i></div>

    <!-- header start --> 
    <header class="header fixed clearfix navbar navbar-fixed-top">
      <div class="container">
        <div class="row">
          <div class="col-md-4">

            <!-- header-left start --> 
            <div class="header-left">

              <!-- logo -->
              <div class="logo smooth-scroll">
                <a href="/home/index"><img id="logo" src="/assets/logo.jpg" height="75" width="75" alt="Worthy"></a>
              </div>

              <!-- name-and-slogan -->
              <div class="logo-section smooth-scroll">
                <div class="brand"><a href="/home/index"><font color="#135fbf" size=4>Dolphin Elite CBSE School</font></a></div>                
              </div>

            </div>
            <!-- header-left end -->

          </div>
          <div class="col-md-8">

            <!-- header-right start --> 
            <div class="header-right">

              <!-- main-navigation start --> 
              <div class="main-navigation animated">

                <!-- navbar start --> 
                <nav class="navbar navbar-default" role="navigation">
                  <div class="container-fluid">

                    <!-- Toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse scrollspy smooth-scroll" id="navbar-collapse-1">
                      <ul class="nav navbar-nav navbar-right">
                        <li class="<%= active_class('/home/index') %>"> <a href="/home/index">Home</a></li>
                        
                        <li class="<%= active_class('/about/management') %>"><a href="/about/management">About Us</a></li>
                        <li class="<%= active_class('/student_life/sports') %>"><a href="/student_life/sports">Student Life</a></li>
                        <li class="<%= active_class('/home/gallery') %>"><a href="/home/gallery">Gallery</a></li>
                        
                        <li class="<%= active_class('/home/admission') %>"><a href="/home/admission">Admissions</a></li>
                      </ul>
                    </div>

                  </div>
                </nav>
                <!-- navbar end -->

              </div>
              <!-- main-navigation end -->

            </div>
            <!-- header-right end -->

          </div>
        </div>
      </div>
    </header>
    <!-- header end -->

    
    <%= yield %>
<!-- section start --> 
<!-- footer start --> 
    <footer id="footer">


      <!-- .subfooter start --> 
      <div class="subfooter">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p class="text-center">Copyright Â© Dolphin Elite CBSE School. All rights reserved
            </div>
          </div>
        </div>
      </div>
      <!-- .subfooter end -->

    </footer>
    <!-- footer end -->


 

    </body>
</html>
